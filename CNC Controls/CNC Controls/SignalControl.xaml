<UserControl x:Class="CNC.Controls.SignalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CNC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="16"
             MaxHeight="30" MaxWidth="16">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="30" Margin="0,0,0,0" VerticalAlignment="Top" Width="16">
            <Button x:Name="btnLED" HorizontalAlignment="Left" Margin="3,2,0,0" VerticalAlignment="Top" Width="12" Height="12" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
            <Button x:Name="btnLabel" Content="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" Padding="0"  HorizontalAlignment="Left" Margin="1,2,0,0" VerticalAlignment="Top" Width="16" Height="12" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" FontSize="10" FontFamily="Global User Interface"/>
         </StackPanel>
    </Grid>
</UserControl>
