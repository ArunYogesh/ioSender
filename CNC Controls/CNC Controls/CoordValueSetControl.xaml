<UserControl x:Class="CNC.Controls.CoordValueSetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CNC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" Width="220">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="43*"/>
        </Grid.ColumnDefinitions>
        <local:NumericField x:Name="cvValue" Format="-###0.000" Value="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" HorizontalAlignment="Left" Margin="3,2,0,2" VerticalAlignment="Center" Height="26" Width="170"/>
        <Button x:Name="btnSet" Content="Set" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="35" Height="22" Margin="0,4" Click="btnSet_Click"/>
    </Grid>
</UserControl>
