<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CNC.Controls.Probing"
             xmlns:Controls="clr-namespace:CNC.Controls;assembly=CNC.Controls.WPF" x:Class="CNC.Controls.Probing.HeightMapControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="240">
            <Label Content="X:"/>
            <Controls:NumericTextBox Value="{Binding Path=MinX}" HorizontalAlignment="Left" Margin="5,0,0,0" Format="###0.0##" VerticalAlignment="Top"/>
            <Label Content="-"/>
            <Controls:NumericTextBox Value="{Binding Path=MaxX}" HorizontalAlignment="Left" Margin="5,0,0,0" Format="###0.0##" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="240" Margin="0,30,0,0">
            <Label Content="Y:"/>
            <Controls:NumericTextBox Value="{Binding Path=MinY}" HorizontalAlignment="Left" Margin="5,0,0,0" Format="###0.0##" VerticalAlignment="Top"/>
            <Label Content="-"/>
            <Controls:NumericTextBox Value="{Binding Path=MaxY}" HorizontalAlignment="Left" Margin="5,0,0,0" Format="###0.0##" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="240" Margin="0,60,0,0">
            <Label Content="Gridsize:"/>
            <Controls:NumericTextBox Value="{Binding Path=GridSize}" HorizontalAlignment="Left" Margin="5,0,0,0" Format="###0.0##" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</UserControl>
